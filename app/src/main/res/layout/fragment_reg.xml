<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Красная плашка с актуальным сообщением -->
    <TextView
        android:id="@+id/tvImportantMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D32F2F"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:padding="12dp"
        android:text="Прививаемся от гриппа!!!"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Поле для логина -->
    <EditText
        android:id="@+id/etLogin"
        android:layout_width="352dp"
        android:layout_height="77dp"
        android:layout_marginTop="24dp"
        android:hint="Логин"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvImportantMessage" />

    <!-- Поле для пароля -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="350dp"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etLogin" />

    <!-- Spinner для выбора роли -->
    <Spinner
        android:id="@+id/spinnerRole"
        android:layout_width="345dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPassword" />

    <Spinner
        android:id="@+id/spinnerAction"
        android:layout_width="350dp"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerRole" />


    <!-- Поле для специального кода -->
    <EditText
        android:id="@+id/etSpecialCode"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Специальный код"
        android:inputType="text"
        android:visibility="gone"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerAction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопка Зарегистрироваться -->
    <Button
        android:id="@+id/btnReg"
        android:layout_width="381dp"
        android:layout_height="73dp"
        android:text="Зарегистрироваться"
        android:visibility="gone"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/etSpecialCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Кнопка Вход -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="381dp"
        android:layout_height="73dp"
        android:layout_marginTop="24dp"
        android:text="Авторизация"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerAction" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="381dp"
        android:layout_height="73dp"
        android:layout_marginTop="24dp"
        android:text="Удалить аккаунт"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerAction" />
</androidx.constraintlayout.widget.ConstraintLayout>